<% layout("./layouts/boilerplate.ejs") %>
<div class="row col-8 offset-2 mt-2">
  <h3 class="mb-4 col-7 offset-1">Sign Up to Create Your Account</h3>
  <form action="/signup" method="post" class="needs-validation" novalidate>
    <div class="mb-2">
      <label for="username" class="form-label">Username</label>
      <input
        name="username"
        id="username"
        type="text"
        class="form-control"
        placeholder=""
        required
      />
    </div>
    <div class="mb-2">
      <label for="email" class="form-label">Email</label>
      <input
        name="email"
        id="email"
        type="email"
        class="form-control"
        placeholder=""
        required
      />
    </div>
    <div class="mb-2">
      <label for="password" class="form-label">Password</label>
      <input
        name="password"
        id="password"
        type="password"
        class="form-control"
        placeholder=""
        required
      />
    </div>
    <div class="col-3 offset-4 mt-3">
      <button class="btn btn-success">Sign up</button>
    </div>
  </form>
</div>
